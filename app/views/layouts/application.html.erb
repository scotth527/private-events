<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark justify-content-between pl-3 pr-3">
      <%= link_to "Private Events", root_path , {class:"navbar-brand"} %>

      <div class="d-flex ">
          <% if user_signed_in? %>
              <% p current_user %>

              <div class="text-light vertical-center mr-2 mt-2">
                  <span>Welcome </span>
                  <%= current_user.username || "No Username Available" %>
              </div>
              <%= link_to 'Profile', current_user, class:"btn btn-outline-success my-2 my-sm-0 mr-2" %>
              <%= link_to 'Create Event', new_event_path, class:"btn btn-outline-primary my-2 my-sm-0 mr-2" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete,
              class:"btn btn-outline-danger my-2 my-sm-0" %>
          <% else %>
              <%= link_to 'Sign In', new_user_session_path, class: "btn btn-outline-info mr-2 my-2 my-sm-0" %>
              <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
      </div>
    </nav>



    <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
    <% end %>

    <% if alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
    <% end %>
    <div class="container p-0">
        <%= yield %>
    </div>
  </body>
</html>
