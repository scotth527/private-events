
<% if @events %>
    <div class="row mt-3 mb-3 d-flex justify-content-between">
        <h4 class="p-0 mb-3 mt-3">Upcoming Events</h4>
        <%= render partial: "card", collection: @upcoming_events.select { |past_event| past_event.present?}, :as => :event %>
    </div>

    <div class="row mt-3 mb-3 d-flex justify-content-between">
    <h4 class="p-0 mt-3 mb-3">Past Events</h4>
        <%= render partial: "card", collection: @past_events.select { |past_event| past_event.present? }, :as => :event %>
    </div>
<% else %>
    <h4>There are no events. Create one with the button on the top right. </h4>
<% end %>
